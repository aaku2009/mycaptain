#include<iostream>
using namespace std;
int main()
{
	int n;
	cout<<"enter the array size: ";
	cin>>n;
	int arr[n];
	int* p;
	cout<<"enter the array elements:\n";
	for(int i=0;i<n;i++){
		cin>>arr[i];
	}
	p=arr;
	cout<<"THE ENTERED ARRAY ELEMENTS ARE:\n";
	for(int i=0;i<n;i++)
	{
		cout<<*p<<endl;
		p++;
	}
}
